@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Kartı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main bg-lightblue">
        <h1>Yetenek Kartı</h1>
        <div class="main-info w3l">
            <div>
                <div class="main-row">
                    <!-- main-row-one -->
                    <div class="profile-grid logo wthree">
                        <img width="150" src="https://scontent.fist20-2.fna.fbcdn.net/v/t39.30808-1/280129665_10159956066379286_2818427176716830330_n.jpg?stp=dst-jpg_s200x200_tt6&_nc_cat=110&ccb=1-7&_nc_sid=e99d92&_nc_ohc=DTbUOIukIcoQ7kNvwGSkGAT&_nc_oc=Adlk-DXuZjWmC8GjI7JLZ1aHsXS57g7aL_tSbTWt8HErvk8z5KcjJ1wBkTFk4F5iH_8&_nc_zt=24&_nc_ht=scontent.fist20-2.fna&_nc_gid=WNMMrUt_7wU0gFa0Md380A&oh=00_AfMLy3859dum3Y3nzK6GUOhwjDtW4J3WrxmaDyTyuafRgA&oe=6866EAE4" alt="">
                        <h2>Merve AKBAŞ</h2>
                        <p>Anadolu Üniversitesi - Yönetim Bilişim Sistemleri</p>

                    </div>
                    <h3 class="title">Yeteneklerim</h3>
                    <div class="col-md-12 skills-right bar_group">
                        @foreach (var item in Model)
                        {
                            <div><a class="text-white" href="/Skills/EditSkill/@item.SkillID"> @item.SkillName - @item.SkillLevel% </a></div>
                            <div class="progress mt-2" style="height:8px;border-radius:10px;" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar bg-warning" style="width: @item.SkillLevel%"></div>
                            </div>
                            <br />
                        }
                    </div>

                    <a href="/Skills/AddSkill/" class="btn btn-warning">Yetenek Ekle</a>

                    <!--bar-js-->
                    <div class="copyright">
                        <p> © @DateTime.Now.Year </p>
                    </div>
                    <script src="~/web/js/bars.js"></script>
                    <div class="clear"> </div>
                </div>
            </div>
        </div>
        <!-- copyright -->
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>
